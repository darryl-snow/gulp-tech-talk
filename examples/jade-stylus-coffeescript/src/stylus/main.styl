html,
body
	background 		#e74c3c
	color 			white
	font-family 	"HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
	font-kerning 	auto
	font-smooth 	always
	font-weight 	300
	text-rendering 	optimizeLegibility
	-webkit-font-smoothing	subpixel-antialiased

h1
	color 			white
	font-size 		3em
	font-weight 	300
	text-align 		center

.box
	margin 			4em
	padding 		2em

	img
		display 	block
		margin 		0 auto
		width 		10%

.box--white
	background 		rgba(white, 0.6)

.box--rounded
	border-radius	0.3em